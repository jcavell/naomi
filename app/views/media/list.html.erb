<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-italic">Media</h1>
  </div>
</div>

<% @medias.each_slice(2) do |row_of_medias| %>
  <div class="row mb-2">
    <% row_of_medias.each do |media| %>
      <div class="col-md-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
<!--            <div class="mb-1 text-muted"><%#= media.updated_at.strftime("Updated %d/%m/%Y %I:%M%p") %></div>-->
            <strong class="d-inline-block mb-2 text-primary">
              <% media.categories.each do |cat| %>
                <%= cat.title %>
                <% end %>
            </strong>
            <h3 class="mb-0">
              <%= link_to media.title, media.link[1] %>
            </h3>
            <p class="card-text mb-auto"><%= media.description %></p>
            <%= link_to media.link[0], media.link[1], class: "text-dark" %>
          </div>
          <% if media.screenshot %>
            <img class="card-img-right flex-auto d-none d-md-block" src = "https:<%= media.screenshot.image_url  %>" alt="<%= media.screenshot.title %>">
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>