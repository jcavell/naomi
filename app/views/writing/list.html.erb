<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-italic">Writing</h1>
  </div>
</div>

<% @writings.each_slice(2) do |row_of_writings| %>
  <div class="row mb-2">
    <% row_of_writings.each do |writing| %>
      <div class="col-md-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
<!--            <div class="mb-1 text-muted"><%#= writing.updated_at.strftime("Updated %d/%m/%Y %I:%M%p") %></div>-->
            <strong class="d-inline-block mb-2 text-primary">
              <% writing.categories.each do |cat| %>
                <%= cat.title %>
                <% end %>
            </strong>
            <h3 class="mb-0">
              <%= link_to writing.title, writing.link[1] %>
            </h3>
            <p class="card-text mb-auto"><%= writing.description %></p>
            <%= link_to writing.link[0], writing.link[1], class: "text-dark" %>
          </div>
          <img class="card-img-right flex-auto d-none d-md-block" src = "https:<%= writing.screenshot.image_url  %>" alt="<%= writing.screenshot.title %>">
        </div>
      </div>
    <% end %>
  </div>
<% end %>